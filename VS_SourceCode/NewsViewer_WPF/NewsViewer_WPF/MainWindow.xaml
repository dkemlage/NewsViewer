<Window x:Class="NewsViewer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsViewer_WPF"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <RichTextBox Background="LightGray" x:Name="MyRichTextBox" HorizontalAlignment="Left" Height="168" Margin="10,569,0,0" 
                     VerticalAlignment="Top" Width="772"  
                     VerticalScrollBarVisibility="Visible">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="LoadNyTimesTopStories" Content="Load NY Times Top Stories" Click="LoadNyTimesTopStories_Click" Margin="10,0,625,729" />
        <DatePicker x:Name="MyDatePicker" Margin="10,45,625,649" DisplayDateStart="2018,01,01" DisplayDateEnd="2019,01,12" />
    </Grid>
</Window>
